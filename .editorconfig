#.editorconfig

root = true

[*]
indent-style = tab
indent-size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent-style = space
max_line_length = 80

[*.{js,css,scss,html,json,jsx}]
indent_style = space
indent_size = 2

[**.min.js]
indent_style = ignore
insert_final_newline = ignore
